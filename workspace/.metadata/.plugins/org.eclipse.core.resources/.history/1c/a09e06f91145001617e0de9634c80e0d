package sorting.RecursiveSort;

public class RecursiveSortTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		// To test the Merge-Sort...!
		RecursiveSorts rs = new RecursiveSorts();
		rs.setMaxSize(50);
		rs.setMergeSortArray();
		rs.setTempArray(new int [rs.getMaxSize()]);
		rs.arrDisplay(rs.getMergeSortArray(), rs.getMergeSortArray().length);
		rs.mergeSort(rs.getMergeSortArray(), rs.getTempArray(), 0, rs.getMergeSortArray().length-1);
		rs.arrDisplay(rs.getMergeSortArray(), rs.getMergeSortArray().length);
	}
}
