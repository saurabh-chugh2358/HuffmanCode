<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" >

    <bean class="org.javabrains.spring.beanpostprocessor.src.DisplayName"></bean> 
    
    <bean id="triangle" class="org.javabrains.spring.beanpostprocessor.src.Triangle">
    	<property name="area" value="20"></property>
    	<property name="type" value="Right Angle"></property>
    	<property name="pointA" ref="zeroPt"></property>
    	<property name="pointB" ref="point1"></property>
    	<property name="pointC" ref="point2"></property>
    </bean>
    
    <bean id="zeroPt" class="org.javabrains.spring.src.Point">
    	<property name="x" value="0"></property>
    	<property name="y" value="0"></property>
    </bean>
    
    <bean id="point1" class="org.javabrains.spring.src.Point">
    	<property name="x" value="10"></property>
    	<property name="y" value="0"></property>
    </bean>
    
    <bean id="point2" class="org.javabrains.spring.src.Point">
    	<property name="x" value="-10"></property>
    	<property name="y" value="0"></property>
    </bean>
 
 </beans>